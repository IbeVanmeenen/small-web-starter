{
    "showErrorNotifications": true,

    "vars": {
        "distPath": "dist/",
        "resourcesPath": "app/"
    },

    "scss": "<=resourcesPath>scss/**/*.scss",
    "img": "<=resourcesPath>img/**/*.{png,jpg,jpeg,gif,svg,webp}",
    "video": "<=resourcesPath>video/**/*.{webm,mp4}",

    "js": {
        "vendors": [
            "<=bowerComponentsPath>"
        ],
        "app": [
            "<=resourcesPath>js/_scope.js",
            "<=resourcesPath>js/components/*.js",
            "<=resourcesPath>js/app.js"
        ],
        "other": "<=resourcesPath>js/other/*.js"
    },

    "templates": {
        "baseFolder": "<=resourcesPath>templates/",
        "pages": "<=resourcesPath>templates/pages/**/*.html",
        "watchFiles": "<=resourcesPath>templates/**/*.html"
    },

    "dist": {
        "css": "<=distPath>assets/css",
        "js": "<=distPath>assets/js",
        "img": "<=distPath>assets/img",
        "video": "<=distPath>assets/video",
        "templates": "<=distPath>"
    },

    "browserSupport": [
        "last 2 versions",
        "ie 9-11"
    ],

    "liveReloadFiles": [
        "<=distPath>assets/css/style.min.css",
        "<=distPath>assets/js/*.js"
    ]
}
