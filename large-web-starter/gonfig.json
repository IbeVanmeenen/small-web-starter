{
    "vars": {
        "distPath": "dist/",
        "resourcesPath": "app/"
    },

    "scss": "<=resourcesPath>scss/**/*.scss",
    "img": "<=resourcesPath>img/**/*.{png,jpg,jpeg,gif,svg,webp}",
    "video": "<=resourcesPath>video/**/*.{webm,mp4}",
    "js": [
        "<=bowerComponentsPath>velocity/velocity.min.js",
        "<=resourcesPath>js/_scope.js",
        "<=resourcesPath>js/components/*.js",
        "<=resourcesPath>js/app.js"
    ],
    "otherJs": [
        "<=resourcesPath>js/other/*.js"
    ],

    "templates": {
        "baseFolder": "<=resourcesPath>templates/",
        "pages": "<=resourcesPath>templates/pages/**/*.html",
        "watchFiles": "<=resourcesPath>templates/**/*.html"
    },

    "dist": {
        "css": "<=distPath>css",
        "js": "<=distPath>js",
        "img": "<=distPath>img",
        "video": "<=distPath>video",
        "templates": "<=distPath>"
    },

    "browserSupport": [
        "last 2 versions",
        "ie 9-11"
    ],

    "liveReloadFiles": [
        "<=distPath>css/style.min.css",
        "app/styleguide/doc_assets/static/hologram--startkit.css",
        "<=distPath>js/*.js",
        "<=distPath>styleguide/css/style.min.css"
    ],

    "styleguideFolder": "<=resourcesPath>styleguide"
}
